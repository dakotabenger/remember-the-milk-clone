extends layout.pug

block content
    div(class="sign-up-container")
        h1 Remember The Milk
            h2 Please complete to create your account.
                form(method="post" action="/users")

                    input(class="user-input" type="text" placeholder="Username")

                    input(class="user-input" type="email" placeholder="email")

                    input(class="user-input" type="password" placeholder="Password")

                    input(class="user-input" type="password" placeholder="Confirm password")

                    button(class="user-input" type="submit") Sign Up

                a(href="/log-in") Already have an account? Log in here.
