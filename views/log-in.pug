extends layout.pug

block content
    div(class="log-in-container")
        div(class="errors-container")
        h2 Log In
        form(class="log-in-form" action="/user/login" method="post")
            input(type="hidden" name="_csurf" value=csrfToken)
            +field("Email Address", 'email', email)
            +field("Password", "password", null, "password")
            div
                button(type='submit') Login
        div
            p: a(href='/sign-up') Don't have an account? Sign up here.
    